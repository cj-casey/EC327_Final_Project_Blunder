<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/wizard"
        android:layout_width="137dp"
        android:layout_height="168dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="76dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lil_guy" />

    <ImageView
        android:id="@+id/pawn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="256dp"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/b_pawn" />

    <ImageView
        android:id="@+id/playerPawn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="412dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/b_pawn" />

    <ImageView
        android:id="@+id/knight"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="256dp"
        app:layout_constraintStart_toEndOf="@+id/pawn"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/b_knight" />

    <ImageView
        android:id="@+id/playerKnight"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="412dp"
        app:layout_constraintStart_toEndOf="@+id/pawn"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/b_knight" />

    <ImageView
        android:id="@+id/bishop"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="256dp"
        app:layout_constraintStart_toEndOf="@+id/knight"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/b_bishop" />

    <ImageView
        android:id="@+id/playerBishop"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="412dp"
        app:layout_constraintStart_toEndOf="@+id/knight"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/b_bishop" />

    <ImageView
        android:id="@+id/rook"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="256dp"
        app:layout_constraintStart_toEndOf="@+id/bishop"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/b_rook" />

    <ImageView
        android:id="@+id/playerRook"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="412dp"
        app:layout_constraintStart_toEndOf="@+id/bishop"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/b_rook" />

    <ImageView
        android:id="@+id/queen"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="256dp"
        app:layout_constraintStart_toEndOf="@+id/rook"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/b_queen" />

    <ImageView
        android:id="@+id/playerQueen"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="412dp"
        app:layout_constraintStart_toEndOf="@+id/rook"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/b_queen" />

    <TextView
        android:id="@+id/pawnPoints"
        android:layout_width="60dp"
        android:layout_height="33dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/press_start_2p"
        android:foregroundGravity="center"
        android:gravity="center_horizontal"
        android:text="100"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pawn" />

    <TextView
        android:id="@+id/pawnCountText"
        android:layout_width="59dp"
        android:layout_height="33dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="160dp"
        android:allowClickWhenDisabled="false"
        android:fontFamily="@font/press_start_2p"
        android:foregroundGravity="center"
        android:gravity="center_horizontal"
        android:text="0"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pawn" />

    <TextView
        android:id="@+id/knightPoints"
        android:layout_width="60dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/press_start_2p"
        android:foregroundGravity="center"
        android:gravity="center_horizontal"
        android:text="300"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/pawnPoints"
        app:layout_constraintTop_toBottomOf="@+id/pawn" />

    <TextView
        android:id="@+id/knightCountText"
        android:layout_width="60dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/press_start_2p"
        android:foregroundGravity="center"
        android:gravity="center_horizontal"
        android:text="0"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/pawnPoints"
        app:layout_constraintTop_toBottomOf="@+id/pawn" />

    <TextView
        android:id="@+id/bishopPoints"
        android:layout_width="60dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/press_start_2p"
        android:foregroundGravity="center"
        android:gravity="center_horizontal"
        android:text="300"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/knightPoints"
        app:layout_constraintTop_toBottomOf="@+id/pawn" />

    <TextView
        android:id="@+id/bishopCountText"
        android:layout_width="60dp"
        android:layout_height="33dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/press_start_2p"
        android:foregroundGravity="center"
        android:gravity="center_horizontal"
        android:text="0"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/knightPoints"
        app:layout_constraintTop_toBottomOf="@+id/pawn" />

    <TextView
        android:id="@+id/rookTable"
        android:layout_width="60dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/press_start_2p"
        android:foregroundGravity="center"
        android:gravity="center_horizontal"
        android:text="500"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/bishopPoints"
        app:layout_constraintTop_toBottomOf="@+id/pawn" />

    <TextView
        android:id="@+id/rookCountText"
        android:layout_width="60dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/press_start_2p"
        android:foregroundGravity="center"
        android:gravity="center_horizontal"
        android:text="0"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/bishopPoints"
        app:layout_constraintTop_toBottomOf="@+id/pawn" />

    <TextView
        android:id="@+id/queenCountText"
        android:layout_width="60dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/press_start_2p"
        android:foregroundGravity="center"
        android:gravity="center_horizontal"
        android:text="0"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/rookTable"
        app:layout_constraintTop_toBottomOf="@+id/pawn" />

    <TextView
        android:id="@+id/queenPoints"
        android:layout_width="60dp"
        android:layout_height="33dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/press_start_2p"
        android:foregroundGravity="center"
        android:gravity="center_horizontal"
        android:text="900"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/rookTable"
        app:layout_constraintTop_toBottomOf="@+id/pawn" />

    <TextView
        android:id="@+id/inventory"
        android:layout_width="240dp"
        android:layout_height="42dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/press_start_2p"
        android:text="Your Inventory:"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/knightPoints" />

    <TextView
        android:id="@+id/shopTitle"
        android:layout_width="357dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/press_start_2p"
        android:gravity="center"
        android:text="Le Gringus Shoppe"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="413dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/redd"
        android:fontFamily="@font/press_start_2p"
        android:text="ENTER THE NEXT FLOOR"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bishopCountText" />

    <TextView
        android:id="@+id/gringusSpeech"
        android:layout_width="169dp"
        android:layout_height="118dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/press_start_2p"
        android:gravity="center"
        android:text="Welcome to my shop traveler! Please replenish your goons."
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scoreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="52dp"
        android:fontFamily="@font/press_start_2p"
        android:text="SCORE"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gringusSpeech" />

    <TextView
        android:id="@+id/scoreCount"
        android:layout_width="108dp"
        android:layout_height="46dp"
        android:layout_marginEnd="36dp"
        android:fontFamily="@font/press_start_2p"
        android:gravity="center"
        android:text="9999"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreLabel" />
</androidx.constraintlayout.widget.ConstraintLayout>