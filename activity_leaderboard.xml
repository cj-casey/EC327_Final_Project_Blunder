<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/leaderboardList"
        android:layout_width="311dp"
        android:layout_height="324dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:backgroundTint="#FFC107">

            <TextView
                android:id="@+id/firstPlace"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/press_start_2p"
                android:gravity="bottom|center|center_vertical"
                android:text="1"
                android:textColor="#000000"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/firstText"
                android:layout_width="234dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:fontFamily="@font/press_start_2p"
                android:gravity="left|center_vertical"
                android:text="XXXXXXXXXX"
                android:textColor="#000000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/firstScore"
                android:layout_width="234dp"
                android:layout_height="65dp"
                android:layout_gravity="center|right"
                android:fontFamily="@font/press_start_2p"
                android:gravity="right|center_vertical"
                android:text="XXXX "
                android:textColor="#000000"
                android:textSize="17sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:backgroundTint="#A5A1A1">

            <TextView
                android:id="@+id/secondPlace"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/press_start_2p"
                android:gravity="bottom|center_horizontal"
                android:text="2"
                android:textColor="#000000"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/secondText"
                android:layout_width="234dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:fontFamily="@font/press_start_2p"
                android:gravity="left|center_vertical"
                android:text="XXXXXXXXXX"
                android:textColor="#000000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/secondScore"
                android:layout_width="234dp"
                android:layout_height="65dp"
                android:layout_gravity="center|right"
                android:fontFamily="@font/press_start_2p"
                android:gravity="right|center_vertical"
                android:text="XXXX "
                android:textColor="#000000"
                android:textSize="17sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:backgroundTint="#B86B06">

            <TextView
                android:id="@+id/thirdPlace"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/press_start_2p"
                android:gravity="bottom|center|center_vertical"
                android:text="3"
                android:textColor="#000000"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/thirdText"
                android:layout_width="234dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:fontFamily="@font/press_start_2p"
                android:gravity="left|center_vertical"
                android:text="XXXXXXXXXX"
                android:textColor="#000000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/thirdScore"
                android:layout_width="234dp"
                android:layout_height="65dp"
                android:layout_gravity="center|right"
                android:fontFamily="@font/press_start_2p"
                android:gravity="right|center_vertical"
                android:text="XXXX "
                android:textColor="#000000"
                android:textSize="17sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:backgroundTint="#FF0000">

            <TextView
                android:id="@+id/fourthPlace"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/press_start_2p"
                android:gravity="bottom|center|center_vertical"
                android:text="4"
                android:textColor="#000000"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/fourthText"
                android:layout_width="234dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:fontFamily="@font/press_start_2p"
                android:gravity="left|center_vertical"
                android:text="XXXXXXXXXX"
                android:textColor="#000000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/fourthScore"
                android:layout_width="234dp"
                android:layout_height="65dp"
                android:layout_gravity="center|right"
                android:fontFamily="@font/press_start_2p"
                android:gravity="right|center_vertical"
                android:text="XXXX "
                android:textColor="#000000"
                android:textSize="17sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#ED0000"
            android:backgroundTint="#316505">

            <TextView
                android:id="@+id/fifthPlace"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/press_start_2p"
                android:gravity="bottom|center|center_vertical"
                android:text="5"
                android:textColor="#000000"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/fifthText"
                android:layout_width="234dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:fontFamily="@font/press_start_2p"
                android:gravity="left|center_vertical"
                android:text="XXXXXXXXXX"
                android:textColor="#000000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/fifthScore"
                android:layout_width="234dp"
                android:layout_height="65dp"
                android:layout_gravity="center|right"
                android:fontFamily="@font/press_start_2p"
                android:gravity="right|center_vertical"
                android:text="XXXX "
                android:textColor="#000000"
                android:textSize="17sp" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <TextView
        android:id="@+id/leaderboardTitle"
        android:layout_width="372dp"
        android:layout_height="87dp"
        android:background="#00E60000"
        android:backgroundTint="#00834F0A"
        android:backgroundTintMode="add"
        android:fontFamily="@font/press_start_2p"
        android:gravity="center"
        android:text="GRINGOID HALL OF FAME"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="31dp" />

    <Button
        android:id="@+id/returnButton"
        android:layout_width="312dp"
        android:layout_height="139dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="452dp"
        android:backgroundTint="#FFC400"
        android:fontFamily="@font/press_start_2p"
        android:text="ASCEND TO GRINGHALLA"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>